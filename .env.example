# Optional direct LLM providers (only if not using Bedrock defaults)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Supabase / Postgres
DATABASE_URL=postgresql+asyncpg://arbiter:arbiter_dev@localhost:5432/arbiter
SUPABASE_URL=https://...
SUPABASE_ANON_KEY=...
SUPABASE_JWT_SECRET=...

# Redis
REDIS_URL=redis://localhost:6379/0

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...

# Reranker (optional — Cohere)
COHERE_API_KEY=...

# Security
ALLOWED_ORIGINS=http://localhost:3000
APP_BASE_URL=http://localhost:3000
TRUSTED_PROXY_HOPS=0

# NextAuth (must match frontend NEXTAUTH_SECRET)
# Either NEXTAUTH_SECRET or AUTH_SECRET is accepted by backend auth.
NEXTAUTH_SECRET=change-me-to-a-random-32-char-string
AUTH_SECRET=change-me-to-a-random-32-char-string
NEXTAUTH_URL=http://localhost:3000

# Communication (AWS SES — uses IAM credentials, no API key needed)
# SES auth is handled by the ECS task role in AWS, or by local AWS
# credentials (env vars / profile / SSO) during development.
EMAIL_FROM=noreply@arbiter-ai.com
EMAIL_FROM_NAME="Arbiter AI"

# Backend
API_URL=http://localhost:8000/api/v1

# App
# APP_MODE: Controls runtime tier (mock | sandbox | production)
#   mock       → All fake data, no external calls, no DB, no auth
#   sandbox    → Real DB + sandbox API keys (Stripe test mode, etc.)
#   production → Live everything
APP_MODE=sandbox
APP_ENV=development
LOG_LEVEL=DEBUG

# Provider Selection (swap implementations via config)
LLM_PROVIDER=bedrock
EMBEDDING_PROVIDER=bedrock
VECTOR_STORE_PROVIDER=pgvector
RERANKER_PROVIDER=flashrank
PARSER_PROVIDER=docling

# Default LLM Models
LLM_MODEL=gpt-4o
LLM_MODEL_FAST=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
