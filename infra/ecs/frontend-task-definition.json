{
  "family": "arbiter-frontend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/arbiter-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/arbiter-frontend-task-role",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "<ACCOUNT_ID>.dkr.ecr.<AWS_REGION>.amazonaws.com/arbiter-ai/frontend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "APP_MODE", "value": "production" },
        { "name": "AUTH_TRUST_HOST", "value": "true" },
        { "name": "NEXTAUTH_URL", "value": "https://arbiter-ai.com" },
        { "name": "NEXT_PUBLIC_API_URL", "value": "/api/v1" },
        { "name": "SANDBOX_EMAIL_BYPASS_ENABLED", "value": "false" },
        { "name": "EMAIL_PROVIDER", "value": "ses" },
        { "name": "EMAIL_FROM", "value": "noreply@arbiter-ai.com" },
        { "name": "EMAIL_FROM_NAME", "value": "Arbiter AI" },
        { "name": "NODE_ENV", "value": "production" },
        { "name": "AWS_REGION", "value": "us-east-1" }
      ],
      "secrets": [
        {
          "name": "AUTH_SECRET",
          "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<ACCOUNT_ID>:secret:arbiter-ai/production:NEXTAUTH_SECRET::"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<ACCOUNT_ID>:secret:arbiter-ai/production:FRONTEND_DATABASE_URL::"
        },
        {
          "name": "EMAIL_SERVER",
          "valueFrom": "arn:aws:secretsmanager:<AWS_REGION>:<ACCOUNT_ID>:secret:arbiter-ai/production:EMAIL_SERVER::"
        }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"fetch('http://localhost:3000/').then((r)=>process.exit(r.ok?0:1)).catch(()=>process.exit(1))\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/arbiter-frontend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
